<div class="col-md-4"></div>
<div class="col-md-4">
  <%= form_for(Product.new) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name , class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price , class: "form-control", :step => 0.0001  %>
    </div>
    <div class="form-group">
      <%= f.label :sale_tax %> (%)
      <%= f.number_field :sale_tax , class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :import_tax %> (%)
      <%= f.number_field :import_tax , class: "form-control" %>
    </div>
    <%= f.submit "Create" , class: "btn btn-primary" %>
  <% end %>
</div>
<div class="col-md-4"></div>
