<div class="col-md-12"> 
	<%= link_to "New Product", new_product_path, class: "btn btn-primary float-right" %><br><br>
  <table class="table table-striped table-bordred">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Price</th>
        <th>Sale Tax</th>
        <th>Import Tax</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.sale_tax %></td>
          <td><%= product.import_tax %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>