<div class="col-md-12"> 
	<%= link_to "New Order" , new_order_path , class: "btn btn-primary float-right" %><br><br>
  <table class="table table-striped table-bordred">
    <thead>
      <tr>
        <th>#</th>
        <th>Order Number</th>
        <th>Order Item</th>
        <th>Cost</th>
        <th>Sale Tax</th>
        <th>Import Tax</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.map(&:order_items).flatten.each_with_index do |order_item, index| %>
        <tr>
          <td><%= index+1%></td>
          <td><%= order_item.order.order_number %></td>
          <td><%= order_item.item_name %></td>
          <td><%= order_item.cost %></td>
          <td><%= order_item.sale_tax %></td>
          <td><%= order_item.import_tax %></td>
          <td><%= link_to "Show" , order_path(order_item.order), class: "btn btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>